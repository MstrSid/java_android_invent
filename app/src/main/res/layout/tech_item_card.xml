<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="16dp"
  android:layout_marginStart="4dp"
  android:layout_marginEnd="4dp"
  android:padding="10dp"
  app:cardCornerRadius="10dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tvTechItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:background="@android:color/holo_green_dark"
      android:textColor="@color/white"
      android:textSize="22sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Название..." />
    <TextView
      android:id="@+id/tvSerial"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="1dp"
      android:padding="8dp"
      android:background="@android:color/holo_green_light"
      android:text="@string/txt_inv_number"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintEnd_toStartOf="@id/tvSerialData"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTechItem" />
    <TextView
      android:id="@+id/tvSerialData"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="1dp"
      android:padding="8dp"
      android:background="#AEAEAE"
      android:textAlignment="textEnd"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/tvSerial"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/tvSerial"
      app:layout_constraintTop_toTopOf="@+id/tvSerial"
      tools:text="3336655" />
    <TextView
      android:id="@+id/tvCondition"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="1dp"
      android:padding="8dp"
      android:background="@android:color/holo_green_light"
      android:text="@string/txt_condition"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintEnd_toStartOf="@+id/tvConditionData"
      app:layout_constraintStart_toStartOf="@+id/tvSerial"
      app:layout_constraintTop_toBottomOf="@+id/tvSerial" />
    <TextView
      android:id="@+id/tvConditionData"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="1dp"
      android:padding="8dp"
      android:background="@android:color/holo_orange_light"
      android:textAlignment="textEnd"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/tvCondition"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/tvCondition"
      app:layout_constraintTop_toTopOf="@+id/tvCondition"
      app:layout_constraintVertical_bias="1.0"
      tools:text="выдан" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>